import  javax.swing.*;

public class Helloworld{
public static void main(String [] args){
  int x,y;
  String i,j;
  i=JOptionPane.showInputDialog("lnput long please");
  j=JOptionPane.showInputDialog("lnput wide please");
  x=Integer.parseInt(i);
  y=Integer.parseInt(j);
  System.out.println("the perimeter is:"+(2*x+2*y));
  System.out.println("the area is:"+x*y);
}
}
